@model Billing_System.Models.tblcutomer
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@600&family=Poppins:wght@200&display=swap" rel="stylesheet">

<style>



    .btn {
        margin-inline: 5px;
        position: relative;
        left: 4.5rem;
    }

    .heading-2 {
        text-align: center;
        font-family: 'Times New Roman';
        font-size: 2.5rem;
        color: black;
    }

    .form-row {
        margin-left: 16%;
    }

    label {
        font-weight: bold;
        font-size: 1.2rem;
    }

    input[type="text"],
    input[type="password"],
    input[type="date"],
    select {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    .form-group {
        max-width: 600px;
        margin: 0 auto;
    }
</style>

@using (Html.BeginForm())
{
    @Html.HiddenFor(e => e.customer_id);

    <h3 class="heading-2">Customer Data</h3>
    <br />
    <div class="form-row ">
        <div class="col-md-6 mb-3 form-group">
            @Html.LabelFor(e => e.customer_name, "Customer Name")
            @Html.TextBoxFor(e => e.customer_name, new { @class = "form-control", placeholder = "Enter Customer Name" })
            @Html.ValidationMessageFor(e => e.customer_name, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6 mb-3 form-group">
            @Html.LabelFor(e => e.email_address, "Email Address")
            @Html.TextBoxFor(e => e.email_address, new { @class = "form-control", placeholder = "Enter Email Address" })
        </div>

        <div class="col-md-6 mb-3 form-group">
            @Html.LabelFor(e => e.mobile_number, "Mobile Number")
            @Html.TextBoxFor(e => e.mobile_number, new { @class = "form-control", placeholder = "Enter Mobile Number" })
        </div>

        <div class="col-md-6 mb-3 form-group">
            @Html.LabelFor(e => e.pass, "Password")
            @Html.PasswordFor(e => e.pass, new { @class = "form-control", placeholder = "Enter Password" })
        </div>

        <div class="col-md-6 mb-3 form-group">
            @Html.LabelFor(e => e.city, "City")
            @Html.TextBoxFor(e => e.city, new { @class = "form-control", placeholder = "Enter City" })
        </div>

        <div class="col-md-8 mb-3 form-group">
            <input type="submit" value="Update" class="btn btn-success btn-lg">
            @Html.ActionLink("Go to table", "Index", null, new { @class = "link-to-table btn btn-danger btn-lg" })
        </div>
    </div>


}

