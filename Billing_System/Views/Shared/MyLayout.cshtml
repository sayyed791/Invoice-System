
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyLayout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@600&family=Poppins:wght@200&display=swap" rel="stylesheet">


    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .nv a {
            font-size: 1.8rem;
            font-weight: 500;
            font-family: 'Baloo Bhai 2', sans-serif;
        }

        .heading {
            color: white;
            margin: auto;
            font-weight: 500;
            font-family: 'Baloo Bhai 2', sans-serif;
        }

        .side {
            background-color: #F1EFEF;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .side p {
                padding: 15px 0;
                font-size: 25px;
                text-align: center;
            }

            .side a {
                color: #000000;
                transition: transform 0.3s;
                display: inline-block;
            }

                .side a:hover {
                    text-decoration: none;
                    transform: scale(1.3);
                    color: #333;
                }
        /*
        .main {
            background-color: #007bff;
            color: #ffffff;
            padding: 0px;
            margin: 20px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
        }

            .main h2 {
                font-size: 3rem;
                font-family: 'Baloo Bhai 2', sans-serif;
            }*/

        .footer {
            background-color: #343a40;
            padding: 30px;
            max-width: 100%;
            width: 100%;
            text-align: center;
            color: #ffffff;
            position: fixed;
            bottom: 0;
        }
    </style>
</head>
<body>
    <div class="nv">
        <nav class="navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="#">CIIT</a>
       <h2 class="heading">Billing System</h2>
        </nav>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 side">
                <p><a href="/Customer/Customer">Customer</a></p>
                <p><a href="/Product/">Product</a></p>
                <p><a href="/Vender/Vender">Vender</a></p>
                <p><a href="/Invoice/">Invoice</a></p>

            </div>

            <div class="col-md-9 ">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="footer">
        @Html.Raw("@ Copyright CIIT Training Institute")
    </div>

</body>
</html>
