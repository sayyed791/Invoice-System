@model Billing_System.Models.vender
@{
    ViewBag.Title = "Vendor";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@600&family=Poppins:wght@200&display=swap" rel="stylesheet">

<style>
    .btn {
        margin-inline: 5px;
    }

    .heading-2 {
        text-align: center;
        font-family: 'Times New Roman';
        font-size: 2.5rem;
        color: black;
    }

    label {
        font-weight: bold;
        font-size: 1.2rem;
    }

    input[type="text"],
    input[type="password"],
    input[type="date"],
    select {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }

    .form-group {
        max-width: 600px;
        margin: 0 auto;
    }

    .form-row {
        margin-left: 16%;
    }

    .btn-lg {
        margin-top: 1rem;
    }
</style>

@using (Html.BeginForm())
{
    @Html.HiddenFor(e => e.vender_id);
    <h3 class="heading-2">Vendor Data</h3>
    <div class="">
        <div class=" mb-3 form-group">
            @Html.LabelFor(e => e.vander_name, "Vendor Name")
            @Html.TextBoxFor(e => e.vander_name, new { @class = "form-control", placeholder = "Enter Vendor Name" })
        </div>

        <div class=" mb-3 form-group">
            @Html.LabelFor(e => e.mobile_number, "Mobile Number")
            @Html.TextBoxFor(e => e.mobile_number, new { @class = "form-control", placeholder = "Enter Mobile Number" })
        </div>

        <div class=" mb-3 form-group">
            @Html.LabelFor(e => e.city, "City")
            @Html.TextBoxFor(e => e.city, new { @class = "form-control", placeholder = "Enter City" })
        </div>

        <div class="mb-3 form-group">
            <input type="submit" value="Update" class="btn btn-success btn-lg">
            @Html.ActionLink("Go to table", "Index", null, new { @class = "link-to-table btn btn-danger btn-lg" })
        </div>
    </div>
}

